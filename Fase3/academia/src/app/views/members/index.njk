{% extends 'layout.njk' %}

{% block head %}
<title>Members</title>
{% endblock head %}

{% block content %}
<div class="cards table-container">   
    <div class="headerCard">
        <a href="/members/create">Novo</a> 
        <form action="/members?filter=" method="get">
            <input 
            type="text"
            name="filter"
            placeholder="Nome"
            >
            <button type="submit">Filtrar</button>
        </form>
    </div>
    <table width="100%">
        <thead>
            <tr>
                
                <th>Instrutores</th>
                <th>EMAIL</th>
                <th>Peso</th>
                <th>Altura</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
                <tr>
                   
                    <td>
                        <span style="background-image:url({{member.avatar_url}})"></span>
                        {{member.name}}
                    </td>
                    <td>{{member.email}}</td>
                    <td>{{member.weight}}kg</td>
                    <td>{{member.height}}cm</td>
                    <td><a class="button_index" href="/members/{{member.id}}">Ver</a></td>
                </tr>
            {%endfor%}
        </tbody>
    
    </table>
    <div class="pagination"
        data-page={{pagination.page}}
        data-total={{pagination.total}}
        data-filter={{filter}}
    >

    </div>
</div>
{% endblock content %}