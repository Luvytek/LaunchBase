{% extends 'layout.njk' %}

{% block head %}
<title>Instructors</title>
{% endblock head %}

{% block content %}
<div class="cards table-container">  
    <div class="headerCard">
        <a href="/instructors/create">Novo</a> 
        <form action="/instructors?filter=" method="get">
            <input 
            type="text"
            name="filter"
            placeholder="Nome ou Acompanhamento"
            >
            <button type="submit">Filtrar</button>
        </form>
    </div>
    <table width="100%">
        <thead>
            <tr>
                
                <th>Instrutores</th>
                <th>Acompanhamento</th>
                <th>Alunos</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for instructor in instructors %}
                <tr>
                   
                    <td>
                        <span style="background-image:url({{instructor.avatar_url}})"></span>
                        {{instructor.name}}</td>
                    <td>{{instructor.services}}</td>
                    <td>
                        {{instructor.total_students}}
                    </td>
                    <td>
                        <a class="button_index" href="/instructors/{{instructor.id}}">Ver</a> / 
                        <a class="button_index" href="/instructors/{{instructor.id}}/edit">Editar</a>
                    </td>
                    
                </tr>
            {%endfor%}
        </tbody>
    
    </table>

    <div class="pagination"
        data-page={{pagination.page}}
        data-total={{pagination.total}}
        data-filter={{filter}}
    >

    </div>

</div>
{% endblock content %}