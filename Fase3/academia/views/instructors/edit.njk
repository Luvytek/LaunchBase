{% extends 'layout.njk' %}

{% block head %}
<title>EDITAR INSTRUTOR</title>
{% endblock head %}


{% block content %}

    <form class="cards" method="POST" action="/instructors?_method=PUT">
        <section 
        class="avatar" 
        style="background: url({{instructor.avatar_url}}) no-repeat center center / cover"></section>
        <section class="details">

            <h3>editar instrutor</h3>
            
            {% include 'instructors/fields.njk' %}
            <input type="hidden" name="id" value="{{instructor.id}}">
        <div class="card">
        <button type='submit'>Salvar</button>
        
        
        
    </form>
    <form action="/instructors?_method=DELETE" method="post">
        <input type="hidden" name="id" value="{{instructor.id}}">
        <button type="submit" style="background-color:#900">DELETAR</button>
        </form>
    </section>
</div>
{% endblock content %}
