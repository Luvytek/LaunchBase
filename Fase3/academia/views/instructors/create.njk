{% extends 'layout.njk' %}

{% block head %}
<title>CADASTRAR INSTRUTOR</title>
{% endblock head %}


{% block content %}

<form class="cards" method="POST" action="/instructors">
    <section 
    class="avatar" ></section>
    <section class="details">

        <h3>novo instrutor</h3>
        <div class="item">
            <div>Avatar URL</div>
            <input type="url" name="avatar_url" placeholder="http://">
        </div>
        <div class="item">
            <div>Nome</div>
            <input type="text" name="name" placeholder="Joao Fernandes Abraão">
        </div>
        <div class="item">
            <div>Data de nascimento</div>
            <input type="date" name="birth">
        </div>
        <div class="item">
            <div>SEXO</div>
            <span> <input type="radio" name="gender" value="M">MASCULINO</span>
            <span> <input type="radio" name="gender" value="F">FEMININO</span>

        </div>
        <div class="item">
            <div>area de atuação</div>
            
            <input type="text" name="services" placeholder="Separe com virgula os intens">
            
        </div>
        <button type='submit'>Salvar</button>

    </section>
    </form>

{% endblock content %}
