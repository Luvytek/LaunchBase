{% endblock head %}


{% block content %}

<div class="cards" method="POST" action="/instructors">
    <section 
    class="avatar" ></section>
    <section class="details">

        <h3>novo instrutor</h3>
        <div class="item">
            <div>Avatar URL</div>
            <input type="url" name="avatarurl">
