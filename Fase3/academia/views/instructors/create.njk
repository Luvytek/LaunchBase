            <span> <input type="radio" name="gender" value="F">FEMININO</span>

        </div>
        <div class="item">
            <div>ACOMPANHAMENTO</div>
            <div>
            <span>Musculação</span>
            <span>Crossfit</span>
            </div>
        </div>
        <div class="item">
            <div>DESDE</div>
            <div>2018</div>
        </div>

    </section>
    </div>

{% endblock content %}
