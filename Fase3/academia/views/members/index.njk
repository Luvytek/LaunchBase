{% extends 'layout.njk' %}

{% block head %}
<title>Members</title>
{% endblock head %}

{% block content %}
<div class="cards table-container">   
    <a href="/members/create">Cadastrar Membro</a>
    <table width="100%">
        <thead>
            <tr>
                
                <th>Instrutores</th>
                <th>EMAIL</th>
                <th>Peso</th>
                <th>Altura</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
                <tr>
                   
                    <td>
                        <span style="background-image:url({{member.avatar_url}})"></span>
                        {{member.name}}
                    </td>
                    <td>{{member.email}}</td>
                    <td>{{member.weight}}kg</td>
                    <td>{{member.height}}cm</td>
                    <td><a class="button_index" href="/members/{{member.id}}">Ver</a></td>
                </tr>
            {%endfor%}
        </tbody>
    
    </table>
</div>
{% endblock content %}