{% extends "layout.njk" %}

{% block head %}
{% endblock head %}

{% block content %}

<section class="password container form">
    <form method="POST" action="/users/forgot-password">
        <div class="header">
            <h3>Esqueceu a Senha?</h3>
        </div>

        <div class="fields">
          <div class="item">
            <div>Email</div>
            <div class="input">
                <input
                type="email"
                name="email" 
                value="{{ user.email }}"
                placeholder="Digite seu email cadastrado"
                onblur="Validate.apply(this, 'isEmail')">
            </div>
          </div>
        </div>
        <button class="button" type="submit">Recuperar SEnha</button>
    </form>
    
</section>



{% endblock content %}