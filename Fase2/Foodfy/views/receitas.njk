
{% extends "layout.njk" %}
    {%block head%}
        <title>Receitas</title>
    {%endblock%}
    {% block content %}
        <div class="body">
        <section class="cards">
        {% for item in items %}
            <div class="card" id="{{item.id}}">
            
            
            <img src="{{item.image}}" alt="{{item.id}}">
            <p class="titulo_receita">{{item.title}}</p>
            <p class="autor_receita">{{item.author}}</p>
        
           
            </div>
         {% endfor %}
    
        </section>
        </div>
    {% endblock %}