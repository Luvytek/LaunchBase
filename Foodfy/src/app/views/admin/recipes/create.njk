{% extends 'admin/recipes/layout.njk' %}

{% block head %}
<title>FoodfyAdmin Create</title>
{% endblock head %}

{% block content%}

    <form action="/admin/recipes" method="POST">
        <div class="showAdmin">
            <h1>Criando Receita</h1>
            <button type="submit">Salvar Receita</button>
        </div>
        <div class="showAdminContent">
            <div class="itemForm">
                <div class="itemFormTitle">Imagem da Receita</div>
                <input type="text" name="image" id="recipe_image">
            </div>
            <div class="itemForm">
                <div class="itemFormTitle">Nome da Receita</div>
                <input type="text" name="title" id="recipe_name">
            </div>
            <div class="itemForm">
                <div class="itemFormTitle">Nome do(a) Autor(a)</div>
                <input type="text" name="author" id="recipe_author">
            </div>
            <div class="itemForm">
                <div class="itemFormTitle">Ingredientes</div>
                <div id="ingredients">
                    <div class="ingredient">
                        <input type="text[]" name="ingredients" value="" placeholder="Ingrediente" />
                    </div>
                </div>
                <button type="button" class="add-ingredient">Adicionar Ingrediente</button>
            </div>
            <div class="itemForm">
                <div class="itemFormTitle">Modo de Preparo</div>
                <div id="steps">
                    <div class="step">
                        <input type="text[]" name="preparation" value="" placeholder="Passo">
                    </div>
                </div>
                <button type="button" class="add-step">Adicionar novo passo </button>
            </div>
            <div class="itemForm">
                <div class="itemFormTitle">Informações Adicionais</div>
                <input class="recipeInfoField" type="text" name="information" id="recipe_info">
            </div>
        </div>
    </form>

<script src="/public/scriptsAdd.js"></script>
{% endblock content %}