{% extends 'admin/layout.njk' %}

{% block head %}
<title>FoodfyAdmin Create</title>
{% endblock head %}

{% block content%}

    <form action="/admin/recipes" method="POST">
        <div class="showAdmin">
            <p>Criando Receita</p>
            <button type="submit">Salvar Receita</button>
        </div>
        <div class="showAdminContent">
            <div class="itemForm">
                <div class="itemFormTitle">Imagem da Receita</div>
                <input type="text" name="image_url" id="recipe_image">
            </div>
            <div class="itemForm">
                <div class="itemFormTitle">Nome da Receita</div>
                <input type="text" name="title" id="recipe_name">
            </div>
            <div class="itemForm">
                <div class="itemFormTitle">Nome do(a) Autor(a)</div>
                <select type="text" name="author" id="recipe_author">
                {% for chef in chefs %}
                <option value="{{chef.id}}" id="recipe_author">{{chef.name}}</option>
                {% endfor %}
                </select>
            </div>
            <div class="itemForm">
                <div class="itemFormTitle">Ingredientes</div>
                <div id="ingredients">
                    <div class="ingredient">
                        <input type="text[]" name="ingredients" value="" placeholder="adicione um ingrediente" />
                    </div>
                </div>
                <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
            </div>
            <div class="itemForm">
                <div class="itemFormTitle">Modo de Preparo</div>
                <div id="steps">
                    <div class="step">
                        <input type="text[]" name="preparation" value="" placeholder="Adicione um passo">
                    </div>
                </div>
                <button type="button" class="add-step">Adicionar novo passo </button>
            </div>
            <div class="itemForm">
                <div class="itemFormTitle">Informações Adicionais</div>
                <textarea class="recipeInfoField" type="text" cols="40" rows="5" name="information" id="recipe_info" placeholder="descreva informações adicionais aqui">
                    </textarea>
            </div>
        </div>
    </form>

<script src="/public/scriptsAdd.js"></script>
{% endblock content %}