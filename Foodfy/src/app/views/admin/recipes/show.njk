{% extends 'admin/layout.njk' %}
{% block head %}
{% endblock head %}

{% block content %}

        <div class="showAdmin">
            <p>Receita: {{recipe.title}}</p>
            <a href="/admin/recipes/{{recipe.id}}/edit">Editar Receita</a>
        </div>
        <div class="showRecipeImage">
            <div class="highlight">
                {% if not files[0]  %}
                    <img src="http://placehold.it/500x500?text=PRODUTO SEM FOTO" alt="">
                {% else %}
                    <img 
                    src="{{files[0].src}}" 
                    alt="{{files[0].name}}"
                    >
                {% endif %}
            </div>
        
            <div class="gallery-preview">
                {% for image in files %}
                    <img 
                    src="{{image.src}}" 
                    alt="{{image.name}}"
                    {% if loop.index0 == 0 %}
                    active
                    {% endif %}
                    onclick="ImageGallery.setImage(event)">
                    
                {% endfor %}
            </div>
        </div>
        <div class="showAdminContentTitle">
            <div>{{recipe.title}}</div>
            <div>por {{chef.name}}</div>
        </div>
        <div class="showAdminContent">
            <div class="showAdminIngredients">
                <div>Ingredientes</div>
                <ul>
                    {% for ingredient in recipe.ingredients%}
                        <li>- {{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="showAdminSteps">
                <div>Modo de Preparo</div>
                <ul>
                    {% for step in recipe.preparation %}
                        <li>- {{step}}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="showAdminInfo">
                <div>Informações adicionais</div>
                <div>{{recipe.information}}</div>
            </div>
        </div>
    </form>

{% endblock content %}