<div class="itemChef">
    <div>Nome</div>
    <input 
        type="text" 
        name="name"
        placeholder="JoÃ£o de Souza"
        value="{{ chef.name }}"
        >
</div>

<div class="itemChef">
    <div>Avatar</div>
    
    <div>
        <div id="photos-preview">
            {% if file %}
                
                <div class="photo" id="{{file.id}}">
                    <img src="{{file.src}}" alt="{{file.name}}">
                    <i 
                    class="material-icons"
                    onclick="PhotosUpload.removeOldPhoto(event, 1)"
                    >
                    close
                    </i>

                </div>

                <input type="hidden" name="removed_files">
            {% endif %}
        </div>
       
        <div class=upload_photo_chef>
            <button class="button_send_avatar">Enviar Avatar</button>
            <input 
                name="photos"
                id="input_avatar_chef"
                type="file"
                accept="image/*"
                onchange="PhotosUpload.handleFileInput(event, 1)"
                value=""
            >
                         
        </div>
        
    </div>
</div>