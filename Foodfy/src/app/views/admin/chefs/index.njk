{% extends 'admin/layout.njk' %}

{% block head %}
<title>Chefs Foodfy</title>
{% endblock head %}

{% block content %}
<div class="bodyChefs">
    <div class="indexChefs">
        <p>Gerenciar chefs</p>
        <a class="New" href="/admin/chefs/create">Novo chef</a>
    </div>
<div class="listChefs">
{% for chef in chefs %}
<div class="infoChef">
    <div class="avatarChef">
        <img src="{{chef.image}}">
    </div>
    <div class="cardChefDescription">
        <div class="nameChef">{{chef.name}}</div>
        <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
    </div>
</div>
{% endfor %}
</div>
</div>
{% endblock content %}
