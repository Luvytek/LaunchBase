{% extends 'admin/layout.njk' %}

{% block head %}
<title>Chef {{ chef.name }}</title>
{% endblock head %}

{% block content %}

<div class="titleChef">
    <div>Chef: {{ chef.name }}</div>
    <a href="/admin/chefs/{{ chef.id }}/edit">Editar Chef</a>
</div>
<div class="presentationChef">
    <img src="{{ chef.avatar_url }}">
    <div>{{ chef.name }}</div>
    <div class="countRecipesNumber">{{ total }} receitas</div>
</div>
<div class="titleChef">Receitas</div>
<div class="listChefRecipes">
    {% for recipe in recipes %}
        <div class="cardChef">
                <img class="cardChefImage" src="{{recipe.image}}">
                <div class="cardChefDescription">
                <p>{{recipe.title}}</p>
                <p>por {{recipe.author}}</p>
                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                </div>
            </div>
    {% endfor %}
</div>

{% endblock content %}